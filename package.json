{
  "name": "@emit-js/watchman",
  "main": "dist/watchman.js",
  "version": "1.0.25",
  "description": "emit watchman triggers",
  "keywords": [
    "emit",
    "watchman",
    "trigger"
  ],
  "author": "emit <emit@emit-js.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/emit-js/watchman.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/emit-js/watchman#readme",
  "dependencies": {
    "@babel/runtime": "7.4.3",
    "fs-extra": "7.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "7.4.3",
    "@babel/plugin-transform-runtime": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@emit-js/glob": "0.0.10",
    "@emit-js/log": "1.0.39",
    "@emit-js/spawn": "3.0.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "@emit-js/emit": "3.2.9",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4"
  },
  "scripts": {
    "build": "rm -rf dist; babel *.js --out-dir dist --source-maps",
    "prepublishOnly": "npm run build",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "test": "jest"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "curly": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "max-len": [
        "error",
        {
          "code": 60,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "never"
      ],
      "sort-keys": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": false
        }
      ],
      "sort-vars": [
        "error",
        {
          "ignoreCase": true
        }
      ],
      "strict": 0
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*Test.js"
    ],
    "testEnvironment": "node"
  }
}
